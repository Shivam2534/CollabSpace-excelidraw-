generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id @default(uuid())
  name        String
  email       String  @unique
  password    String
  avatar      String?
  accesstoken String  @default("access token not found")
  rooms       Room[]
  chats       Chat[]
}

model Room {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  createdAt DateTime @default(now())
  adminId   String
  admin     User     @relation(fields: [adminId], references: [id])
  chat      Chat[]
}

model Chat {
  id       Int     @id @default(autoincrement())
  username String?
  message  String
  userId   String
  roomId   Int
  user     User    @relation(fields: [userId], references: [id])
  room     Room    @relation(fields: [roomId], references: [id])
}
